package com.company;
import java.util.Random;
import java.util.Scanner;
class Game {
    private int ran_number;
    private int user_inp;
    int flag=100;
    public Game(int n)
    {
        ran_number=n;
    }
    public void setUser_Input(int inp)
    {
        user_inp=inp;
    }
    public int getUser_Input()
    {
        return user_inp;
    }
    public int getComp_input(){
        return ran_number;
    }
    public void isCorrectNumber()
    {
        if (user_inp<ran_number)
        {
            System.out.println("The number entered by you is smaller than the computer generated number");
            flag--;
        }
        else if (user_inp>ran_number)
        {
            System.out.println("The number entered by you is greater than the computer generated number");
            flag--;
        }
        else if (user_inp==ran_number)
        {
            System.out.println("Your guess is correct");
        }
    }
    public int getNo_of_guesses()
    {
       return 101-flag;
    }
    public int getScore()
    {
        return flag;
    }
}

public class JavaBootCamp43_Guess_The_Number_OOPs {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        Random rand= new Random();
        int upperbound= 101;
        int r= rand.nextInt(upperbound);
        Game gr= new Game(r);

        for(int i=1;i<=100;i++)
        {
            System.out.print("Enter a number to play the game: ");
            int num1= sc.nextInt();
            gr.setUser_Input(num1);
            gr.isCorrectNumber();
            if(gr.getUser_Input()==gr.getComp_input())
            {
                break;
            }
            if (gr.getScore()==0)
            {
                System.out.println("No more Chances left, better luck next time");
                System.out.println("Your Score: 0");
                break;
            }
        }
        if(gr.getScore()>0)
        {
            System.out.println("Random Number generated by the Computer is: "+gr.getComp_input());
            System.out.println("No. of chances used by you: "+gr.getNo_of_guesses());
            System.out.println("Your Score is: "+gr.getScore());
        }
    }
}
